<% book.book_comments.each do |book_comment| %>

  <%= book_comment.user.name %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to 'Destroy', book_book_comment_path(book,book_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %><% end %><br>
  <% end %>